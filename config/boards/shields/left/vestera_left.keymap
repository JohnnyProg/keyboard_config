#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

/ {
  keymap {
    compatible = "zmk,keymap";

    default_layer {
      // |  TAB |  1  |  2  |  3  |  4  |  5  |  6  |
  // | CTRL |  Q  |  W  |  E  |  R  |  T  |  Y  |
  // | ALT  |  A  |  S  |  D  |  F  |  G  |  H  |
  // | GUI  |  Z  |  X  |  C  |  V  |  B  |  N  |
  // | ESC  | TAB |SHIFT|CTRL |ENTER|
  // |SPACE |BSPC |LEFT |RIGHT|
      bindings = <
        &kp LCTL     &kp 1     &kp 2     &kp 3     &kp 4     &kp 5     &kp LBRC      // Row 0 (numbers)
        &kp LSFT     &kp Q     &kp W     &kp E     &kp R     &kp T     &kp LBKT      // Row 1 (letters)
        &kp ESC     &kp A     &kp S     &kp D     &kp F     &kp G     &kp LPAR      // Row 2 (letters)
        &kp LGUI     &kp Z     &kp X     &kp C     &kp V     &kp B                   // Row 3 (letters)
        &kp LALT      &kp TAB   &kp LSFT  &kp LCTRL &kp ENTER                         // Row 4 (5 keys only)
        &kp SPACE    &kp BSPC  &kp LEFT  &kp RIGHT                                   // Row 5 (thumb cluster)
      >;
    };
  };
}